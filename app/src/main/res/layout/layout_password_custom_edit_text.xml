<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_5sdp"
       app:errorEnabled="true"
        app:errorTextColor="@color/errorColor"
        app:errorIconTint="@color/errorColor"
        app:errorIconDrawable="@null"
        app:passwordToggleEnabled="true"
        app:passwordToggleDrawable="@drawable/password_icon_selector"
        app:passwordToggleTint="@color/logInHint"
        app:boxStrokeColor="@color/logInHint"
        android:textColorHint="@color/logInHint"
        app:hintTextAppearance="@style/TextLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText"
            style="@style/TILStyle"
            android:hint="@string/edittext"
            android:textSize="@dimen/_14ssp"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:imeOptions="actionNext"
            android:theme="@style/Theme.App.Base" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>